Ncpu = 0

[plotA1]
operation = PLOT
soltab = sol000/amplitude000
axesInPlot = [time,freq]
axisInTable = ant
plotFlag = True
prefix = plots/ampBF_

[flag]
operation = FLAG
soltab = sol000/amplitude000
pol = XX,YY
axesToFlag = [time,freq]
order = [100,40]
maxCycles = 1
maxRms = 5
replace = False
preFlagZeros = False
mode = smooth

